// This file contains existing TDM materials that have been modified for this FM

// Change material type from tile to stone to reduce footstep noise
textures/darkmod/stone/flat/smooth/ceramic_tile_reddish01_lt3
{

    stone

    qer_editorimage textures/darkmod/stone/flat/smooth_ceramic_tile_reddish01_ed
    diffusemap      textures/darkmod/stone/flat/smooth_ceramic_tile_reddish01
    specularmap     textures/darkmod/stone/flat/smooth_ceramic_tile_generic01_s
}

textures/darkmod/stone/flat/tiles_burgundyandcream_lt3
{

    stone

    qer_editorimage textures/darkmod/stone/flat/tiles_burgundyandcream_ed
    diffusemap      textures/darkmod/stone/flat/tiles_burgundyandcream
    bumpmap         textures/darkmod/stone/flat/tiles_burgundyandcream_local
    specularmap     textures/darkmod/stone/flat/tiles_burgundyandcream_s
}

textures/darkmod/stone/flat/tile_plain_diamond01_brown_dark_lt3
{
    stone

    qer_editorimage textures/darkmod/stone/flat/tile_plain_diamond01_brown_dark_ed
    {
        blend diffusemap
        map textures/darkmod/stone/flat/tile_plain_diamond01_brown
        rgb 0.5 // Set the brightness to 50%
    }
    specularmap     textures/darkmod/stone/flat/tile_plain_diamond01_brown_s
    bumpmap         textures/darkmod/stone/flat/tile_plain_diamond01_local


}

// make twoSided
textures/darkmod/decals/vegetation/hanging_horizontal_leaves_lt3
{

    surftype15
    description "foliage"
	noSelfShadow
    twoSided

    bumpmap         textures/darkmod/decals/vegetation/hanging_horizontal_leaves_local
    specularmap     textures/darkmod/decals/vegetation/hanging_horizontal_leaves_s

	{
		blend diffusemap
		map      textures/darkmod/decals/vegetation/hanging_horizontal_leaves
		alphatest 0.5
	}


}